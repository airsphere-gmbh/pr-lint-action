    "version": "2.0.0",
    "tasks": [
      {
        "label": "yarn: build",
        "type": "shell",
        "command": "yarn build",
        "isBackground": false,
        "problemMatcher": {
          "owner": "typescript",
          "pattern": "$tsc",
          "background": {
            "activeOnStart": true,
            "beginsPattern": {
              "regexp": "(.*?)"
            },
            "endsPattern": {
              "regexp": "(compiled with)|(Invalid)"
            }
          }
        }
      },
    ]
  }